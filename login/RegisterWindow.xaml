<Window x:Class="AuthApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="393"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None">
    <Window.Background >
    <ImageBrush ImageSource="C:\Users\ABDO EL IDRISSI\source\repos\login\login\bin\Debug\net8.0-windows\IMAR.png" />
</Window.Background>
    
    <Grid >
        <UIElement.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </UIElement.RenderTransform>

        <TextBlock Text="Username:" Margin="30,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTextBox" Margin="120,50,30,0" VerticalAlignment="Top" Height="30"/>

        <TextBlock Text="Password:" Margin="30,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBox" Margin="120,100,30,0" VerticalAlignment="Top" Height="30"/>

        <Button Content="Register" Margin="50,210,200,30" Background="pink" Foreground="White" BorderBrush="pink"  Click="RegisterButton_Click"/>
        <Button Content="Back to Login" Margin="200,210,50,30" Background="black" Foreground="White" BorderBrush="black"  Click="BackToLoginButton_Click"/>
    </Grid>
</Window>
